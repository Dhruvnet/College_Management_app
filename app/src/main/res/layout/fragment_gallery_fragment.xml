<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.gallery_fragment">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"

            app:iss_auto_cycle="true"
            app:iss_delay="0"
            app:iss_period="1000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Anvesh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/slider"

                android:gravity="center"
                android:text="Anvesh"
                android:textColor="@color/black"
                android:textSize="25dp" />
            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/black"
                />
            <GridView
                android:id="@+id/AnveshGrid"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/Anvesh"
                android:gravity="center"
                android:numColumns="3"
                android:horizontalSpacing="50dp"
                android:verticalSpacing="20dp"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/Spurhti"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Anvesh"
                android:gravity="center"
                android:text="Spurhti"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/black"
                />

            <GridView
                android:id="@+id/SpurhtiGrid"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/Spurti"
                android:gravity="center"
                android:numColumns="3"
                android:horizontalSpacing="50dp"
                android:verticalSpacing="20dp"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/CSI"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Spurti"
                android:gravity="center"
                android:text="CSI"
                android:textColor="@color/black"
                android:textSize="25dp" />
            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/black"
                />
            <GridView
                android:id="@+id/CSIGrid"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/CSI"
                android:gravity="center"
                android:numColumns="3"
                android:horizontalSpacing="50dp"
                android:verticalSpacing="20dp"
                android:layout_margin="20dp"
                />
            <!--android:background="#ededed"-->
        </LinearLayout>
    </ScrollView>


</RelativeLayout>